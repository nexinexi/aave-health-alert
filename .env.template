# Network selection (arbitrum | ethereum)
CHAIN=arbitrum
# Optional override for Pool address if CHAIN is not mapped or you want a different deployment
# POOL_ADDRESS=0x0000000000000000000000000000000000000000

# Optional RPC; if omitted, viem uses a default public RPC
# RPC_URL=https://arbitrum.llamarpc.com

# Existing config
WALLET=
HF_THRESHOLD=1.3
POLL_INTERVAL_MS=15000
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=
PUSHOVER_NOTIFICATION_SOUND=echo
# Emergency notification retry interval in seconds (min 30, default 60s)
PUSHOVER_RETRY=60
# Emergency notification expiration in seconds (max 10800 / 3 hours, default 3600 / 1 hour)
PUSHOVER_EXPIRE=3600

# Scheduled report configuration
# Hour to send morning report in 24h format (default: 8). Range: 0-23
MORNING_HOUR=8
# Hour to send evening report in 24h format (default: 20). Range: 0-23
EVENING_HOUR=20
# Timezone for scheduled reports (default: UTC). Examples: America/New_York, Europe/London, Asia/Tokyo
TIMEZONE=UTC
